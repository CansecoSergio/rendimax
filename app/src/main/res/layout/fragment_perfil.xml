<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context="sergio.upiicsa.rendimax.fragments.PerfilFragment">

    <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="16dp"
            >

            <LinearLayout
                android:id="@+id/linear_layout_perfil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:elevation="12dp"
                    android:id="@+id/view2"
                    app:cardCornerRadius="40dp"
                    android:layout_centerHorizontal="true"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="0dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/foto_image_view"/>

                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nombre_usuario"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textSize="20sp"
                    android:textColor="@color/text_default_material_light_primary"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/correo_usuario"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:textSize="16sp"
                    android:textColor="@color/text_default_material_light_secondary"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cerrar_sesion_button"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="@string/cerrar_sesion"
                    android:textColor="@color/colorAccent"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:text="@string/aviso_redes"
                        android:textSize="16sp"
                        android:textColor="@color/text_default_material_light_primary"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imagen_facebook"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_facebook_box"
                            android:background="@android:color/transparent"/>

                        <ImageView
                            android:id="@+id/imagen_twitter"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_twitter_box"
                            android:background="@android:color/transparent"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/progressBarPerfil"
                android:visibility="gone"/>
        </RelativeLayout>
</FrameLayout>
