<FrameLayout
    android:id="@+id/fragment_proyecciones"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sergio.upiicsa.rendimax.fragments.ProyeccionesFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/agregar_proyecciones"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/agregar_nueva_proyeccion"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    />

            </LinearLayout>

            <View style="@style/Divider"/>

            <TextView
                android:id="@+id/texto_sin_proyecciones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Sin proyecciones"
                android:textSize="16sp"
                android:textColor="@color/text_default_material_light_secondary"
                android:visibility="gone"
                />

            <LinearLayout
                android:id="@+id/layout_list_proyecciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/list_view_proyecciones"
                    android:layout_width="match_parent"
                    android:layout_height="360dp">

                </ListView>
            </LinearLayout>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/progressBarProyecciones"
                android:visibility="gone"/>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>